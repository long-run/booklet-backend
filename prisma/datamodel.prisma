type User {
  u_idx: String!
  u_id: String!
}

type BookFeed {
  idx: String! @unique
  book: Book!
  rating: Int!
  status: FeedStatus!
  background_theme: String!
  note: String!
  reg_date: String!
  modified_date: String!
}

type Post {
  id: String! @unique
  user: User!
  bookfeed: BookFeed!
  like_count: Int! @default(value: 0)
  liked: Boolean! @default(value: 0)
}

type Book {
  title: String!
  isbn: String!
  author: String!
  book_cover: String!
}

enum FeedStatus {
  currently_reading, read, want_to_read
}