type User {
  id: ID! @unique
  name: String!
}

type Book {
  id: ID! @unique
  title: String!
  isbn: String! @unique
  author: String @default(value: "")
  book_cover: String @default(value: "")
}

type BookFeed {
  id: ID! @unique
  book: Book!
  rating: Int @default(value: 0)
  status: FeedStatus @default(value: "WANT_TO_READ")
  background_theme: String @default(value: "")
  note: String @default(value: "")
  reg_date: String @default(value: "")
  modified_date: String @default(value: "")
}

type Post {
  id: ID! @unique
  user: User!
  bookfeed: BookFeed!
  like_count: Int! @default(value: 0)
  liked: Boolean! @default(value: "false")
}

enum FeedStatus {
  CURRENT_READING,
  READ,
  WANT_TO_READ
}
